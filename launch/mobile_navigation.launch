<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find mobile)/map/mymap.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find mobile)/include/amcl_diff.launch"/>

  <!-- move_base -->
  <include file="$(find mobile)/include/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <include file="$(find mobile)/launch/mobile_rviz.launch" />
  </group>
</launch>
